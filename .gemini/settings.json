{
  "general": {
    "vimMode": true,
    "preferredEditor": "code",
    "disableAutoUpdate": false,
    "disableUpdateNag": true,
    "checkpointing": {
      "enabled": true,
      "interval": 300
    }
  },
  "ui": {
    "theme": "GitHub",
    "hideBanner": true,
    "hideTips": false,
    "hideFooter": true,
    "showMemoryUsage": true,
    "showLineNumbers": true
  },
  "ide": {
    "enabled": true,
    "hasSeenNudge": true
  },
  "tools": {
    "usePty": true
  },
  "mcpServers": {
  },
  "telemetry": {
      
  },
  "privacy": {
    "usageStatisticsEnabled": false
  },
  "model": {
    "name": "gemini-2.5-pro-latest",
    "maxSessionTurns": -1,
    "summarizeToolOutput": {
      "run_shell_command": {
        "tokenBudget": 100
      }
    }
  },
  "context": {
    "fileName": ["GEMINI.md"],
    "includeDirectories": [".ai-ley/shared", ".project/", "src/"],
    "loadFromIncludeDirectories": true,
    "fileFiltering": {
      "respectGitIgnore": true,
      "respectGeminiIgnore": true,
      "enableRecursiveFileSearch": true
    }
  },
  "security": {
    "folderTrust": {
        "featureEnable": true,
        "enabled": true
    }
  },
  "advanced": {
    "autoConfigureMemory": true,
    "excludedEnvVars": ["DEBUG", "DEBUG_MODE", "NODE_ENV"]
  }
}